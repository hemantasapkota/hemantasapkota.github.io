{
  "dataDir": "${appRoot}/tmp",
  "generatedDir": "${appRoot}/tmp/generated",
  "resources": {
    "assetsDir": "${generatedDir}/assets",
    "viewsDir": "${generatedDir}/views",
    "staticUrlRoot": "/public/"
  },
  "containers": {
    "default": {
      "particles": ["${appRoot}/app", "${appRoot}/install"]
    }
  },
  "logger": {
    "root": {
      "level": "none",
      "streams": [
        {
          "level": "debug",
          "stream": "process.stdout",
          "streamOptions": {
            "mode": "short", "prettyPrint": true
          }
        }
      ]
    }
  }
}